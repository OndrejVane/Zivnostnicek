<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nestedScrollView"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    tools:context=".activities.expense.ExpenseNewActivity"
    tools:showIn="@layout/app_bar_expense_new">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/appCompatTextViewLoginLinkpokus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/fill_information_about_expense"
            android:textSize="16sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutExpenseNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/number_of_bill_name"
                android:inputType="text"
                android:maxLines="1"
                android:drawableStart="@drawable/ic_identification_number"
                android:textColor="@color/black" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutExpenseAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditTextExpenseAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/amount"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:drawableStart="@drawable/ic_money"
                android:textColor="@color/black" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="@string/VAT"/>

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinnerVAT"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/vat_amount"
                    android:prompt="@string/VAT"
                    style="@style/Widget.AppCompat.Spinner.Underlined" />
                <TextView
                    android:layout_width="60dp"
                    android:layout_marginStart="30dp"
                    android:layout_height="wrap_content"
                    android:text="@string/date"/>

                <EditText
                    android:id="@+id/editTextDate"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:onClick="showDateDialog"
                    android:enabled="true"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    />

            </LinearLayout>
        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutVAT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/trader"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spinnerTrader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                style="@style/Widget.AppCompat.Spinner.Underlined" />

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/photoView"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:src="@drawable/ic_add_photo"
            android:layout_gravity="center"
            android:onClick="getPicture"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/expense_items"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/appCompatTextViewMandatoryInformation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/mandatory_information"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonAddTrader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:onClick="addExpense"
            android:text="@string/add_expense"/>

    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v4.widget.NestedScrollView>